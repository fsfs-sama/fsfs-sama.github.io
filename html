    <script>
        // 论坛功能
        document.addEventListener('DOMContentLoaded', function() {
                    // 初始化论坛帖子
                    const forumContent = document.getElementById('forumContent');
                    const postForm = document.getElementById('postForm');
                    const newPostBtn = document.getElementById('newPostBtn');
                    const submitPost = document.getElementById('submitPost');
                    const cancelPost = document.getElementById('cancelPost');
                    const submitReply = document.getElementById('submitReply');
                    const replyContent = document.getElementById('replyContent');

                    // 从localStorage获取帖子，不使用默认数据
                    let posts = JSON.parse(localStorage.getItem('forumPosts')) || [];

                    // 当前查看的帖子ID
                    let currentPostId = null;

                    // 分页相关变量
                    const POSTS_PER_PAGE = 5; // 每页显示的帖子数量
                    let currentPage = 1; // 当前页码

                    // 渲染论坛帖子
                    function renderPosts() {
                        forumContent.innerHTML = '';

                        if (posts.length === 0) {
                            forumContent.innerHTML = `
                        <div style="text-align: center; padding: 20px; color: #666;">
                            <p>暂无帖子，点击"发表新帖"创建第一个帖子吧！</p>
                        </div>
                    `;
                        } else {
                            // 计算总页数
                            const totalPages = Math.ceil(posts.length / POSTS_PER_PAGE);

                            // 确保当前页码有效
                            if (currentPage < 1) currentPage = 1;
                            if (currentPage > totalPages) currentPage = totalPages;

                            // 计算当前页的帖子范围
                            const startIndex = (currentPage - 1) * POSTS_PER_PAGE;
                            const endIndex = Math.min(startIndex + POSTS_PER_PAGE, posts.length);

                            // 渲染当前页的帖子
                            for (let i = startIndex; i < endIndex; i++) {
                                const post = posts[i];
                                const postElement = document.createElement('div');
                                postElement.className = 'forum-post';
                                postElement.style.cursor = 'pointer';
                                postElement.innerHTML = `
                            <div class="post-header">
                                <span>${post.author}</span>
                                <span>${post.date}</span>
                            </div>
                            <h4>${post.title}</h4>
                            <p>${post.content.substring(0, 100)}${post.content.length > 100 ? '...' : ''}</p>
                            <div class="post-footer">
                                <span>回复: ${post.replies ? post.replies.length : 0}</span>
                            </div>
                        `;

                                // 添加点击事件
                                postElement.addEventListener('click', function() {
                                    viewPost(post.id);
                                });

                                forumContent.appendChild(postElement);
                            }

                            // 添加分页控件
                            if (totalPages > 1) {
                                const paginationElement = document.createElement('div');
                                paginationElement.className = 'pagination';
                                paginationElement.style.display = 'flex';
                                paginationElement.style.justifyContent = 'center';
                                paginationElement.style.marginTop = '20px';
                                paginationElement.style.gap = '10px';

                                // 上一页按钮
                                const prevBtn = document.createElement('button');
                                prevBtn.className = 'btn';
                                prevBtn.textContent = '上一页';
                                prevBtn.disabled = currentPage === 1;
                                prevBtn.addEventListener('click', function() {
                                    currentPage--;
                                    renderPosts();
                                });

                                // 页码按钮
                                for (let i = 1; i <= totalPages; i++) {
                                    const pageBtn = document.createElement('button');
                                    pageBtn.className = 'btn';
                                    pageBtn.textContent = i;
                                    if (i === currentPage) {
                                        pageBtn.style.backgroundColor = '#007bff';
                                    }
                                    pageBtn.addEventListener('click', function() {
                                        currentPage = i;
                                        renderPosts();
                                    });
                                    paginationElement.appendChild(pageBtn);
                                }

                                // 下一页按钮
                                const nextBtn = document.createElement('button');
                                nextBtn.className = 'btn';
                                nextBtn.textContent = '下一页';
                                nextBtn.disabled = currentPage === totalPages;
                                nextBtn.addEventListener('click', function() {
                                    currentPage++;
                                    renderPosts();
                                });

                                paginationElement.insertBefore(prevBtn, paginationElement.firstChild);
                                paginationElement.appendChild(nextBtn);

                                forumContent.appendChild(paginationElement);
                            }
                        }

                        // 保存到localStorage
                        localStorage.setItem('forumPosts', JSON.stringify(posts));
                    }

                    // 查看帖子详情
                    function viewPost(postId) {
                        currentPostId = postId;
                        const post = posts.find(p => p.id === postId);

                        if (!post) return;

                        // 切换到详情视图
                        document.getElementById('forumListView').style.display = 'none';
                        document.getElementById('forumDetailView').style.display = 'block';

                        // 设置帖子标题
                        document.getElementById('detailTitle').textContent = post.title;

                        // 渲染帖子详情
                        const postDetail = document.getElementById('postDetail');
                        postDetail.innerHTML = `
                    <div class="forum-post">
                        <div class="post-header">
                            <span>${post.author}</span>
                            <span>${post.date}</span>
                        </div>
                        <h4>${post.title}</h4>
                        <p>${post.content}</p>
                    </div>
                    
                    <h4 style="margin-top: 30px; margin-bottom: 15px;">回复 (${post.replies ? post.replies.length : 0})</h4>
                    <div id="repliesContainer">
                        ${post.replies && post.replies.length > 0 ? 
                            post.replies.map(reply => `
                                <div class="forum-post" style="margin-left: 20px; border-left: 3px solid #e9ecef; padding-left: 15px;">
                                    <div class="post-header">
                                        <span>${reply.author}</span>
                                        <span>${reply.date}</span>
                                    </div>
                                    <p>${reply.content}</p>
                                </div>
                            `).join('') : 
                            '<p style="text-align: center; color: #666; padding: 20px;">暂无回复，快来发表第一个回复吧！</p>'
                        }
                    </div>
                `;
                
                // 重新绑定提交回复按钮的事件
                document.getElementById('submitReply').onclick = function() {
                    const content = document.getElementById('replyContent').value.trim();

                    if (!content) {
                        alert('请输入回复内容！');
                        return;
                    }

                    // 查找当前帖子
                    const postIndex = posts.findIndex(p => p.id === currentPostId);

                    if (postIndex === -1) return;

                    // 初始化回复数组
                    if (!posts[postIndex].replies) {
                        posts[postIndex].replies = [];
                    }

                    // 获取电脑名称作为用户名
                    const computerName = localStorage.getItem('computerName') || 
                                        (navigator.userAgent.match(/Windows NT ([\d.]+)/) ? 'Windows用户' : '访客');
                    
                    // 如果没有存储过电脑名称，则存储
                    if (!localStorage.getItem('computerName')) {
                        localStorage.setItem('computerName', computerName);
                    }
                    
                    // 添加新回复
                    const newReply = {
                        author: computerName,
                        content: content,
                        date: new Date().toISOString().split('T')[0]
                    };

                    posts[postIndex].replies.push(newReply);

                    // 清空回复框
                    document.getElementById('replyContent').value = '';

                    // 重新渲染帖子详情
                    viewPost(currentPostId);

                    // 保存到localStorage
                    localStorage.setItem('forumPosts', JSON.stringify(posts));
                };
            }
            
            // 返回帖子列表
            document.getElementById('backToList').addEventListener('click', function() {
                document.getElementById('forumListView').style.display = 'block';
                document.getElementById('forumDetailView').style.display = 'none';
                currentPostId = null;
            });
            
            // 提交回复
            submitReply.addEventListener('click', function() {
                const content = replyContent.value.trim();
                
                if (!content) {
                    alert('请输入回复内容！');
                    return;
                }
                
                // 查找当前帖子
                const postIndex = posts.findIndex(p => p.id === currentPostId);
                
                if (postIndex === -1) return;
                
                // 初始化回复数组
                if (!posts[postIndex].replies) {
                    posts[postIndex].replies = [];
                }
                
                // 获取电脑名称作为用户名
                const computerName = localStorage.getItem('computerName') || 
                                    (navigator.userAgent.match(/Windows NT ([\d.]+)/) ? 'Windows用户' : '访客');
                
                // 如果没有存储过电脑名称，则存储
                if (!localStorage.getItem('computerName')) {
                    localStorage.setItem('computerName', computerName);
                }
                
                // 添加新回复
                const newReply = {
                    author: computerName,
                    content: content,
                    date: new Date().toISOString().split('T')[0]
                };
                
                posts[postIndex].replies.push(newReply);
                
                // 清空回复框
                replyContent.value = '';
                
                // 重新渲染帖子详情
                viewPost(currentPostId);
                
                // 保存到localStorage
                localStorage.setItem('forumPosts', JSON.stringify(posts));
            });

            // 显示/隐藏发帖表单
            newPostBtn.addEventListener('click', function() {
                postForm.style.display = postForm.style.display === 'none' ? 'block' : 'none';
            });
            
            // 清空论坛记录
            document.getElementById('clearForumBtn').addEventListener('click', function() {
                if (confirm('确定要清空所有论坛记录吗？此操作不可恢复！')) {
                    posts = [];
                    localStorage.removeItem('forumPosts');
                    renderPosts();
                    alert('论坛记录已清空！');
                }
            });

            cancelPost.addEventListener('click', function() {
                postForm.style.display = 'none';
                document.getElementById('postTitle').value = '';
                document.getElementById('postContent').value = '';
            });

            // 提交新帖子
            submitPost.addEventListener('click', function() {
                const title = document.getElementById('postTitle').value;
                const content = document.getElementById('postContent').value;

                if (title && content) {
                    // 生成唯一ID（使用时间戳确保唯一性）
                    const newId = Date.now();
                    
                    // 获取电脑名称作为用户名
                    const computerName = localStorage.getItem('computerName') || 
                                        (navigator.userAgent.match(/Windows NT ([\d.]+)/) ? 'Windows用户' : '访客');
                    
                    // 如果没有存储过电脑名称，则存储
                    if (!localStorage.getItem('computerName')) {
                        localStorage.setItem('computerName', computerName);
                    }
                    
                    const newPost = {
                        id: newId,
                        title: title,
                        content: content,
                        author: computerName,
                        date: new Date().toISOString().split('T')[0],
                        replies: []  // 改为数组而不是数字
                    };

                    posts.unshift(newPost);
                    renderPosts();

                    // 重置表单
                    document.getElementById('postTitle').value = '';
                    document.getElementById('postContent').value = '';
                    postForm.style.display = 'none';
                } else {
                    alert('请填写标题和内容！');
                }
            });

            // 初始化渲染
            renderPosts();

            // 做题记录功能
            const recordsTable = document.getElementById('recordsTable');
            const addRecordBtn = document.getElementById('addRecordBtn');
            const recordModal = document.getElementById('recordModal');
            const codeModal = document.getElementById('codeModal');
            const closeRecordModal = document.getElementById('closeRecordModal');
            const cancelRecord = document.getElementById('cancelRecord');
            const saveRecord = document.getElementById('saveRecord');
            const closeCodeModal = document.getElementById('closeCodeModal');
            const closeCodeModalBtn = document.getElementById('closeCodeModalBtn');
            const copyCodeBtn = document.getElementById('copyCodeBtn');
            const editCodeBtn = document.getElementById('editCodeBtn');
            
            // 表单元素
            const problemId = document.getElementById('problemId');
            const problemName = document.getElementById('problemName');
            const difficulty = document.getElementById('difficulty');
            const status = document.getElementById('status');
            const code = document.getElementById('code');
            const notes = document.getElementById('notes');
            
            // 显示元素
            const codeDisplay = document.getElementById('codeDisplay');
            const notesDisplay = document.getElementById('notesDisplay');
            const problemInfo = document.getElementById('problemInfo');
            const modalTitle = document.getElementById('modalTitle');
            const codeModalTitle = document.getElementById('codeModalTitle');
            
            // 当前编辑的记录索引
            let currentEditIndex = -1;

            // 从localStorage获取记录或使用默认数据
            let records = JSON.parse(localStorage.getItem('problemRecords')) || [{
                id: 'P1001',
                name: 'A+B问题',
                difficulty: '简单',
                date: '2023-10-01',
                status: '已完成',
                code: '#include <iostream>\nusing namespace std;\n\nint main() {\n    int a, b;\n    cin >> a >> b;\n    cout << a + b << endl;\n    return 0;\n}',
                notes: '简单的输入输出问题，注意数据范围。'
            }, {
                id: 'P1002',
                name: '过河卒',
                difficulty: '中等',
                date: '2023-10-02',
                status: '进行中',
                code: '// 正在编写中...',
                notes: '这是一个动态规划问题，需要考虑马的移动规则。'
            }, {
                id: 'P1003',
                name: '铺地毯',
                difficulty: '困难',
                date: '2023-10-03',
                status: '未开始',
                code: '',
                notes: ''
            }];

            // 渲染做题记录
            function renderRecords() {
                recordsTable.innerHTML = '';
                records.forEach((record, index) => {
                    const row = document.createElement('tr');
                    const statusClass = record.status === '已完成' ? 'status-completed' :
                        record.status === '进行中' ? 'status-pending' : '';

                    row.innerHTML = `
                        <td>${record.id}</td>
                        <td>${record.name}</td>
                        <td>${record.difficulty}</td>
                        <td>${record.date}</td>
                        <td class="${statusClass}">${record.status}</td>
                        <td>
                            <button class="btn view-btn" data-index="${index}" style="padding: 5px 10px; font-size: 14px; margin-right: 5px;">查看</button>
                            <button class="btn edit-btn" data-index="${index}" style="padding: 5px 10px; font-size: 14px; margin-right: 5px;">编辑</button>
                            <button class="btn delete-btn" data-index="${index}" style="padding: 5px 10px; font-size: 14px; background-color: #dc3545;">删除</button>
                        </td>
                    `;
                    recordsTable.appendChild(row);
                });

                // 添加事件监听器
                document.querySelectorAll('.view-btn').forEach(btn => {
                    btn.addEventListener('click', function() {
                        viewRecord(parseInt(this.getAttribute('data-index')));
                    });
                });
                
                document.querySelectorAll('.edit-btn').forEach(btn => {
                    btn.addEventListener('click', function() {
                        editRecord(parseInt(this.getAttribute('data-index')));
                    });
                });
                
                document.querySelectorAll('.delete-btn').forEach(btn => {
                    btn.addEventListener('click', function() {
                        deleteRecord(parseInt(this.getAttribute('data-index')));
                    });
                });

                // 保存到localStorage
                localStorage.setItem('problemRecords', JSON.stringify(records));
            }
            
            // 显示添加记录模态框
            addRecordBtn.addEventListener('click', function() {
                currentEditIndex = -1;
                modalTitle.textContent = '添加做题记录';
                problemId.value = '';
                problemName.value = '';
                difficulty.value = '简单';
                status.value = '未开始';
                code.value = '';
                notes.value = '';
                recordModal.style.display = 'flex';
            });
            
            // 关闭记录模态框
            closeRecordModal.addEventListener('click', function() {
                recordModal.style.display = 'none';
            });
            
            cancelRecord.addEventListener('click', function() {
                recordModal.style.display = 'none';
            });
            
            // 保存记录
            saveRecord.addEventListener('click', function() {
                const newRecord = {
                    id: problemId.value.trim(),
                    name: problemName.value.trim(),
                    difficulty: difficulty.value,
                    date: new Date().toISOString().split('T')[0],
                    status: status.value,
                    code: code.value,
                    notes: notes.value
                };
                
                if (!newRecord.id || !newRecord.name) {
                    alert('请填写题目编号和题目名称！');
                    return;
                }
                
                if (currentEditIndex === -1) {
                    // 添加新记录
                    records.push(newRecord);
                } else {
                    // 更新现有记录
                    records[currentEditIndex] = newRecord;
                }
                
                renderRecords();
                recordModal.style.display = 'none';
            });
            
            // 查看记录
            function viewRecord(index) {
                const record = records[index];
                codeModalTitle.textContent = '查看题目代码';
                problemInfo.textContent = `题目编号: ${record.id} | 题目名称: ${record.name} | 难度: ${record.difficulty} | 状态: ${record.status}`;
                codeDisplay.textContent = record.code || '暂无代码';
                notesDisplay.textContent = record.notes || '暂无笔记';
                
                // 设置编辑按钮的数据索引
                editCodeBtn.setAttribute('data-index', index);
                
                codeModal.style.display = 'flex';
            }
            
            // 编辑记录
            function editRecord(index) {
                currentEditIndex = index;
                const record = records[index];
                modalTitle.textContent = '编辑做题记录';
                problemId.value = record.id;
                problemName.value = record.name;
                difficulty.value = record.difficulty;
                status.value = record.status;
                code.value = record.code;
                notes.value = record.notes;
                recordModal.style.display = 'flex';
            }
            
            // 删除记录
            function deleteRecord(index) {
                if (confirm('确定要删除这条记录吗？')) {
                    records.splice(index, 1);
                    renderRecords();
                }
            }
            
            // 关闭代码模态框
            closeCodeModal.addEventListener('click', function() {
                codeModal.style.display = 'none';
            });
            
            closeCodeModalBtn.addEventListener('click', function() {
                codeModal.style.display = 'none';
            });
            
            // 复制代码
            copyCodeBtn.addEventListener('click', function() {
                const codeText = codeDisplay.textContent;
                if (!codeText || codeText === '暂无代码') {
                    alert('没有可复制的代码！');
                    return;
                }
                
                // 创建临时文本区域
                const textarea = document.createElement('textarea');
                textarea.value = codeText;
                document.body.appendChild(textarea);
                textarea.select();
                
                try {
                    document.execCommand('copy');
                    alert('代码已复制到剪贴板！');
                } catch (err) {
                    console.error('复制失败:', err);
                    alert('复制失败，请手动复制代码。');
                }
                
                document.body.removeChild(textarea);
            });
            
            // 从查看代码模态框编辑记录
            editCodeBtn.addEventListener('click', function() {
                const index = parseInt(this.getAttribute('data-index'));
                codeModal.style.display = 'none';
                editRecord(index);
            });

            // 初始化渲染
            renderRecords();

            // AI助手功能
            const aiChat = document.getElementById('aiChat');
            const aiInput = document.getElementById('aiInput');
            const aiSend = document.getElementById('aiSend');

            // DeepSeek API配置
            // 从localStorage获取API密钥或使用默认值
            let API_KEY = localStorage.getItem('deepseek_api_key') || 'sk-227b62c5cdb9453dad7ac8957d86985b';
            const API_URL = "https://api.deepseek.com/v1/chat/completions";
            
            // API密钥配置模态框
            const apiKeyModal = document.getElementById('apiKeyModal');
            const apiKeyBtn = document.getElementById('apiKeyBtn');
            const closeModal = document.getElementById('closeModal');
            const cancelApiKey = document.getElementById('cancelApiKey');
            const saveApiKey = document.getElementById('saveApiKey');
            const apiKeyInput = document.getElementById('apiKeyInput');
            
            // 显示API密钥配置模态框
            apiKeyBtn.addEventListener('click', function() {
                apiKeyModal.style.display = 'flex';
                // 如果已有API密钥，显示部分内容
                if (API_KEY) {
                    apiKeyInput.value = API_KEY.substring(0, 8) + '...';
                }
            });
            
            // 关闭模态框
            closeModal.addEventListener('click', function() {
                apiKeyModal.style.display = 'none';
            });
            
            cancelApiKey.addEventListener('click', function() {
                apiKeyModal.style.display = 'none';
            });
            
            // 保存API密钥
            saveApiKey.addEventListener('click', function() {
                const newApiKey = apiKeyInput.value.trim();
                if (newApiKey && newApiKey.startsWith('sk-')) {
                    API_KEY = newApiKey;
                    localStorage.setItem('deepseek_api_key', API_KEY);
                    apiKeyModal.style.display = 'none';
                    
                    // 显示成功消息
                    const successMessage = document.createElement('div');
                    successMessage.className = 'ai-message ai-bot';
                    successMessage.textContent = 'API密钥已成功保存！现在您可以开始使用DeepSeek AI助手了。';
                    aiChat.appendChild(successMessage);
                    aiChat.scrollTop = aiChat.scrollHeight;
                } else {
                    alert('请输入有效的DeepSeek API密钥（应以"sk-"开头）。');
                }
            });
            
            // 检查API密钥是否已配置
            if (!API_KEY) {
                const welcomeMessage = document.createElement('div');
                welcomeMessage.className = 'ai-message ai-bot';
                welcomeMessage.innerHTML = '您好！我是DeepSeek AI助手。请先点击右上角的"配置API密钥"按钮，输入您的DeepSeek API密钥以开始使用。';
                aiChat.appendChild(welcomeMessage);
            }
            
            // 发送消息到DeepSeek API
            async function sendMessageToDeepSeek(message) {
                try {
                    // 显示思考中状态
                    const thinkingMessage = document.createElement('div');
                    thinkingMessage.className = 'ai-message ai-bot';
                    thinkingMessage.innerHTML = '<i class="fas fa-spinner fa-spin"></i> 正在思考...';
                    aiChat.appendChild(thinkingMessage);
                    aiChat.scrollTop = aiChat.scrollHeight;
                    
                    const response = await fetch(API_URL, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Authorization': `Bearer ${API_KEY}`
                        },
                        body: JSON.stringify({
                            model: "deepseek-chat",
                            messages: [
                                {role: "system", content: "你是一个专业的编程助手，能够解答各种编程问题，提供代码示例，并解释技术概念。"},
                                {role: "user", content: message}
                            ],
                            temperature: 0.7,
                            max_tokens: 1024
                        })
                    });
                    
                    if (!response.ok) {
                        const errorData = await response.json().catch(() => ({}));
                        const errorMessage = errorData.error?.message || `API请求失败: ${response.status} ${response.statusText}`;
                        throw new Error(errorMessage);
                    }
                    
                    const data = await response.json();
                    
                    // 移除思考中状态
                    aiChat.removeChild(thinkingMessage);
                    
                    // 添加AI回复
                    const aiMessage = document.createElement('div');
                    aiMessage.className = 'ai-message ai-bot';
                    aiMessage.textContent = data.choices[0].message.content;
                    aiChat.appendChild(aiMessage);
                    aiChat.scrollTop = aiChat.scrollHeight;
                    
                } catch (error) {
                    console.error("DeepSeek API错误:", error);
                    
                    // 移除思考中状态
                    if (aiChat.contains(thinkingMessage)) {
                        aiChat.removeChild(thinkingMessage);
                    }
                    
                    // 显示错误信息
                    const errorMessage = document.createElement('div');
                    errorMessage.className = 'ai-message ai-bot';
                    errorMessage.style.color = '#ff6b6b';
                    
                    // 提供更友好的错误信息
                    let friendlyError = error.message;
                    if (error.message.includes('401')) {
                        friendlyError = 'API密钥无效，请检查您的API密钥是否正确设置。' +
                                      '您可以通过点击"配置API密钥"按钮来更新您的密钥。';
                    } else if (error.message.includes('429')) {
                        friendlyError = 'API请求频率过高，请稍后再试。';
                    } else if (error.message.includes('500')) {
                        friendlyError = '服务器内部错误，请稍后再试或联系技术支持。';
                    } else if (error.message.includes('fetch')) {
                        friendlyError = '网络连接失败，请检查您的网络连接。';
                    }
                    
                    errorMessage.textContent = friendlyError;
                    aiChat.appendChild(errorMessage);
                    aiChat.scrollTop = aiChat.scrollHeight;
                }
            }
            
            // 发送消息
            function sendMessage() {
                const message = aiInput.value.trim();
                if (message) {
                    // 检查API密钥是否已配置
                    if (!API_KEY) {
                        // 显示提示消息
                        const promptMessage = document.createElement('div');
                        promptMessage.className = 'ai-message ai-bot';
                        promptMessage.textContent = '请先配置DeepSeek API密钥才能使用AI助手功能。点击右上角的"配置API密钥"按钮进行设置。';
                        aiChat.appendChild(promptMessage);
                        aiChat.scrollTop = aiChat.scrollHeight;
                        return;
                    }
                    
                    // 添加用户消息
                    const userMessage = document.createElement('div');
                    userMessage.className = 'ai-message ai-user';
                    userMessage.textContent = message;
                    aiChat.appendChild(userMessage);

                    // 清空输入框
                    aiInput.value = '';

                    // 滚动到底部
                    aiChat.scrollTop = aiChat.scrollHeight;
                    
                    // 发送消息到DeepSeek API
                    sendMessageToDeepSeek(message);
                }
            }

            aiSend.addEventListener('click', sendMessage);
            aiInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    sendMessage();
                }
            });

            // 下载资源功能
            const downloadsGrid = document.getElementById('downloadsGrid');

            // 下载资源数据
            const downloads = [{
                name: 'JavaScript高级教程',
                type: 'PDF',
                size: '2.5 MB',
                icon: 'file-pdf'
            }, {
                name: '算法与数据结构',
                type: 'ZIP',
                size: '15.3 MB',
                icon: 'file-archive'
            }, {
                name: '前端开发工具包',
                type: 'ZIP',
                size: '8.7 MB',
                icon: 'toolbox'
            }, {
                name: 'React项目模板',
                type: 'ZIP',
                size: '3.2 MB',
                icon: 'react'
            }, {
                name: 'Python数据分析',
                type: 'PDF',
                size: '4.1 MB',
                icon: 'file-pdf'
            }, {
                name: 'CSS样式库',
                type: 'ZIP',
                size: '1.8 MB',
                icon: 'css3-alt'
            }];

            // 渲染下载资源
            downloads.forEach(item => {
                const downloadCard = document.createElement('div');
                downloadCard.className = 'download-card';
                downloadCard.innerHTML = `
                    <div class="download-icon">
                        <i class="fas fa-${item.icon}"></i>
                    </div>
                    <div class="download-info">
                        <h3>${item.name}</h3>
                        <p>类型: ${item.type} | 大小: ${item.size}</p>
                        <button class="btn download-btn">下载</button>
                    </div>
                `;
                downloadsGrid.appendChild(downloadCard);
            });

            // 下载按钮事件
            document.querySelectorAll('.download-btn').forEach(button => {
                button.addEventListener('click', function() {
                    alert('开始下载...（演示功能）');
                });
            });
        });
    </script>
</body>

</html>
